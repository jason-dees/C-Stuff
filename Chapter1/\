#include <stdio.h>

#define MAXWORDLENGTH 20

void main(){
    int c, i, wordLength, mostWords, wordLengthLoop;

    int lengthCounts[MAXWORDLENGTH];

    wordLength = mostWords  = 0;
    
    for(i = 0; i < MAXWORDLENGTH; ++i){
        lengthCounts[i] = 0;
    } 

    while((c = getchar()) != EOF){

       if(c == ' ' || c == '\n' || c == '\t'){

           if(wordLength > 0){

               ++lengthCounts[wordLength];

               if(lengthCounts[wordLength] > mostWords){
                   mostWords = lengthCounts[wordLength];
               }

           }

           wordLength = 0;
       }
       else{

           ++ wordLength;

       }
    }
    
    for(wordLengthLoop = mostWords; wordLengthLoop > 0; --wordLengthLoop){
        printf("%d", wordLengthLoop);

        for(i = 0; i < MAXWORDLENGTH; ++i){
            if(lengthCounts[i]){
                if(lengthCounts[i] == wordLengthLoop){
                    printf(" #");
                }
                else{
                    printf("  ");
                }
            }
        } 
        putchar('\n');

    }
    printf(" ");
    for(i = 0; i < MAXWORDLENGTH; ++i){
        if(lengthCounts[i]){
            printf("%2d", i);
        }
    } 
    putchar('\n');
}
